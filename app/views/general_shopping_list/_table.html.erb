<table class='table table-striped table-active mt-lg-4'>
    <thead>
        <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <% @general_list.each do |ingredient| %>
        <tr>
            <td><%= ingredient[:food].name %></td>
            <td><%= pluralize( ingredient[:remaining_quantity],  ingredient[:food].measurement_unit) %></td>
            <td>$<%= ingredient[:price] %></td>
        </tr>
        <% end %>
    </tbody>
</table>